
@model IEnumerable<VendaWebMvc.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedor";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Criar" class="btn btn-default">Criar Novo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modeItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modeItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modeItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modeItem => item.SalarioBase)
            </td>
            <td>
                <a asp-action="Editar" asp-route-Id="@item.Id">Editar</a>
                <a asp-action="Detalhe" asp-route-Id="@item.Id">Detalhe</a>
                <a asp-action="Deletar" asp-route-Id="@item.Id">Deletar</a>
            </td>
        </tr>
        }

    </tbody>

</table>



