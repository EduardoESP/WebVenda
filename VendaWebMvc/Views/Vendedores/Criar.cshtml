@model VendaWebMvc.Models.Vendedor

@{
    ViewData["Title"] = "Criar";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="contol-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email" class="contol-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Nascimento" class="contol-label"></label>
                <input asp-for="Nascimento" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SalarioBase" class="contol-label"></label>
                <input asp-for="SalarioBase" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>
