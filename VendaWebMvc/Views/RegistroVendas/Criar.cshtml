@model VendaWebMvc.Models.ViewModel.FormularioRegistroVendasViewModel

@{
    ViewData["Title"] = "Criar Venda";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegistroVendas.Data" class="contol-label"></label>
                <input asp-for="RegistroVendas.Data" class="form-control" />
                <span asp-validation-for="RegistroVendas.Data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegistroVendas.Valor" class="contol-label"></label>
                <input asp-for="RegistroVendas.Valor" class="form-control" />
                <span asp-validation-for="RegistroVendas.Valor" class="text-danger"></span>
            </div>
                        
            <div class="form-group">
                <label asp-for="RegistroVendas.VendedorId" class="control-label"></label>
                <select asp-for="RegistroVendas.VendedorId" asp-items="@(new SelectList(Model.Vendedores,"Id","Nome")) " class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}