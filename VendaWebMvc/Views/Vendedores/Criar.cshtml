@model VendaWebMvc.Models.ViewModel.FormularioVendedorViewModel

@{
    ViewData["Title"] = "Criar";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vendedor.Nome" class="contol-label"></label>
                <input asp-for="Vendedor.Nome" class="form-control" />
                <span asp-validation-for="Vendedor.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Vendedor.Email" class="contol-label"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
                <span asp-validation-for="Vendedor.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Vendedor.Nascimento" class="contol-label"></label>
                <input asp-for="Vendedor.Nascimento" class="form-control" />
                <span asp-validation-for="Vendedor.Nascimento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Vendedor.SalarioBase" class="contol-label"></label>
                <input asp-for="Vendedor.SalarioBase" class="form-control" />
                <span asp-validation-for="Vendedor.SalarioBase" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Vendedor.DepartamentoId" class="control-label"></label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamento,"Id","Nome")) " class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}